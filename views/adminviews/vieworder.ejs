<%-include('./sidebar') %>

  <section class="h-100 gradient-custom">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-10 col-xl-8">
          <div class="card" style="border-radius: 10px;">

            <div class="card-body p-4">
              <div class="d-flex justify-content-between align-items-center mb-4">
                <p class="lead fw-normal mb-0" style="color: #a8729a;"></p>
                <p class="small text-muted mb-0">Order Id: <%= order.orderId %>
                </p>
              </div>

              <% order.items.forEach((item, index)=> { %>
                <div class="card shadow-0 border mb-4">
                  <div class="card-body">
                    <div class="row">
                      <div class="col-md-2">
                        <img src="/<%= item.product.images[0] %>" class="img-fluid" alt="<%= item.product.name %>">
                      </div>
                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                        <p class="text-muted mb-0">
                          <%= item.product.name %>
                          <% if (item.itemstatus === 'CANCELLED') { %>
                            <span style="color: red;"><%= item.itemstatus %></span>
                          <% } %>
                        </p>
                      </div>
                      
                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                        <p class="text-muted mb-0 small">Color:<%= item.product.color %>
                        </p>
                      </div>
                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                        <p class="text-muted mb-0 small">Qty: <%= item.quantity %>
                        </p>
                      </div>
                      <div class="col-md-2 text-center d-flex justify-content-center align-items-center">
                        <p class="text-muted mb-0 small">&#8377;<%= item.product.price %>
                        </p>
                      </div>
                    </div>

                  </div>
                </div>
                <% }); %>


                  <div class="row d-flex align-items-center">
                    <div class="col-md-4">
                      <p class="text-muted mb-0 small">Order status:<%= order.orderStatus %>
                      </p>
                    </div>

                  </div>

                  <div class="d-flex justify-content-between pt-2">
                    <p class="fw-bold mb-0">Address Details</p>
                  </div>

                  <div class="d-flex justify-content-between pt-2">
                    <p class="text-muted mb-0">Customer name: <%= order.shippingAddress.name %>
                    </p>
                  </div>

                  <div class="d-flex justify-content-between">
                    <p class="text-muted mb-0">Mobile: <%= order.shippingAddress.mobile %>
                    </p>
                  </div>

                  <div class="d-flex justify-content-between">
                    <p class="text-muted mb-0">Building name: <%= order.shippingAddress.buildingname %>
                    </p>
                  </div>

                  <div class="d-flex justify-content-between">
                    <p class="text-muted mb-0">Street: <%= order.shippingAddress.street %>
                    </p>
                  </div>

                  <div class="d-flex justify-content-between">
                    <p class="text-muted mb-0">City: <%= order.shippingAddress.city %>
                    </p>
                  </div>

                  <div class="d-flex justify-content-between">
                    <p class="text-muted mb-0">Pincode: <%= order.shippingAddress.pincode %>
                    </p>
                  </div>

                  <div class="d-flex justify-content-between">
                    <p class="text-muted mb-0">State: <%= order.shippingAddress.state %>
                    </p>
                  </div>

            </div>
            <div class="card-footer border-0 px-4 py-4"
              style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
              <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Total
                Amount:&#8377; <%= order.totalAmount%>
              </h5>
            </div>