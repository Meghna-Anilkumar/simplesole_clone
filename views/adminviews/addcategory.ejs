<%- include('./sidebar') %>

<div class="content">
  <h2>Add New Category</h2>
  <form action="/addCategory" method="post" id="categoryForm" onsubmit="return validateCategory()">
    <div class="mb-3">
      
      <% if (typeof error !== 'undefined') { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>
      
      <label for="name" class="form-label">Category name:</label>
      <input type="text" class="form-control" id="name" name="name" required oninput="validateCategory()">
      <div id="categoryError" class="text-danger mt-1" style="font-size: 0.875rem;"></div>
    </div>
    <button type="submit" class="btn btn-primary" id="submitBtn" disabled>Save Category</button>
  </form>
</div>

<script>
  const form = document.getElementById('categoryForm');
  const nameInput = document.getElementById('name');
  const errorDiv = document.getElementById('categoryError');
  const submitBtn = document.getElementById('submitBtn');

  function validateCategory() {
    const categoryName = nameInput.value.trim();
    let isValid = true;
    let errorMessage = '';

    // Reset previous error
    errorDiv.textContent = '';

    if (categoryName === '') {
      errorMessage = 'Category name cannot be empty';
      isValid = false;
    } else if (categoryName.length < 2) {
      errorMessage = 'Category name must be at least 2 characters long';
      isValid = false;
    } else if (!/^[a-zA-Z0-9\s\-_]+$/.test(categoryName)) {
      errorMessage = 'Only letters, numbers, spaces, hyphens, and underscores are allowed';
      isValid = false;
    }

    if (!isValid) {
      errorDiv.textContent = errorMessage;
      submitBtn.disabled = true;
    } else {
      errorDiv.textContent = '';
      submitBtn.disabled = false;
    }

    return isValid;
  }


  document.addEventListener('DOMContentLoaded', () => {
    validateCategory();
  });
</script>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>