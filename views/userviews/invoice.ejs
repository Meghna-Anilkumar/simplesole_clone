<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice</title>
  
</head>
<style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f8f8f8;
    }
    .invoice-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ccc;
      background-color: #fff;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      border-radius: 8px;
    }
    h2 {
      color: #68a982;
      text-align: center;
    }
    p {
      color: #68a982;
    }
    table {
      width: 100%;
      margin-top: 20px;
      border-collapse: collapse;
    }
    th,
    td {
      border: 1px solid #ddd;
      padding: 10px;
      text-align: left;
    }
    th {
      background-color: #f2f2f2;
    }
    .total-row {
      font-weight: bold;
    }
    .icon {
      margin-right: 5px;
    }
    .thanks-message {
      text-align: center;
      margin-top: 20px;
      font-size: 18px;
      color: #68a982;
    }
    .subtotal {
      font-weight: bold;
    }
  </style>
<body>
    <div class="invoice-container">
        <h2>
            <i class="fas fa-shopping-bag icon"></i>  Invoice for Order ID: <%= order.orderId %>
        </h2>
        <p>Status: <%= order.orderStatus %></p>

        <table>
            <thead>
                <tr>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Total</th>
                </tr>
            </thead> 
            <tbody>
                <% order.items.forEach(function(item) { %>
                    <tr>
                        <td><%= item.product.name %></td>
                        <td><%= item.quantity %></td>
                        <td>₹<%= item.product.price %></td>
                        <td>₹<%= order.totalAmount%></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <table>
            <tr>
                
                <td>SIMPLE SOLE</td>
            </tr>
           
            <tr>
                <th>User Name:</th>
                <td><%= user.name %></td>
            </tr>
            <tr>
                <th>Shipped Address:</th>
                <td>
                    <%= order.shippingAddress.buildingname %>, 
                    <%= order.shippingAddress.street %>, 
                    <%= order.shippingAddress.city %>, 
                    <%= order.shippingAddress.state %>, 
                    <%= order.shippingAddress.pincode %>
                </td>
            </tr>
            <tr>
                <th>Ordered Date:</th>
                <td><%= order.orderdate.toDateString() %></td>
            </tr>
        </table>

        <table>
            <tr>
                <th>Subtotal:</th>
                <td>₹<%= order.totalAmount %></td>
            </tr>
            
        </table>

        <p class="thanks-message">Thank you for Shopping!</p>
    </div>
</body>
</html>
