<!-- HTML code for displaying products with category offers -->
<div id="content" class="my-3">
  <div id="products">
    <div class="row mx-0">
      <% allProducts.filter(product => !product.category.blocked && !product.blocked).forEach(product => { %>
        <div class="col-lg-3 col-md-6">
          <div class="card d-flex flex-column align-items-center">
            <div class="product-name">
              <%= product.name %>
            </div>
            <!-- Check if there's an offer for the product -->
            <% const productOffer = productOffers.find(offer => offer.product._id.toString() === product._id.toString()); %>
            <!-- Check if there's a category offer for the product's category -->
            <% const categoryOffer = categoryOffers.find(offer => offer.category._id.toString() === product.category.toString()); %>
            <% if (productOffer || categoryOffer) { %>
              <!-- Display discount badge if offer exists -->
              <div class="discount-badge">
                <% if (productOffer) { %>
                  <% const discountPercentage = ((product.price - productOffer.newPrice) / product.price) * 100; %>
                  <div class="font-weight-bold discount-percentage">
                    <%= Math.round(discountPercentage) %>% OFF
                  </div>
                <% } else if (categoryOffer) { %>
                  <% const discountPercentage = categoryOffer.discountPercentage; %>
                  <div class="font-weight-bold discount-percentage">
                    <%= discountPercentage %>% OFF
                  </div>
                <% } %>
              </div>
            <% } %>
            <a href="/products/<%= product._id %>">
              <div class="card-img">
                <img src="/<%= product.images[0] %>" alt="<%= product.name %>">
              </div>
            </a>
            <div class="card-body pt-5">
              <!-- Display product price -->
              <% if (productOffer) { %>
                <div class="d-flex align-items-center price">
                  <div class="font-weight-bold">Price: <s>₹<%= product.price %></s></div>
                  <div class="font-weight-bold ml-2"> ₹<%= productOffer.newPrice %>
                  </div>
                </div>
              <% } else if (categoryOffer) { %>
                <div class="d-flex align-items-center price">
                  <div class="font-weight-bold">Price: <s>₹<%= product.price %></s></div>
                  <div class="font-weight-bold ml-2"> ₹<%= (product.price * (100 - categoryOffer.discountPercentage) / 100).toFixed(2) %>
                  </div>
                </div>
              <% } else { %>
                <div class="d-flex align-items-center price">
                  <div class="font-weight-bold">Price: ₹<%= product.price %>
                  </div>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</div>

